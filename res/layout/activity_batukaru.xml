<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFDAEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:src="@drawable/batukaru" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#093B51"
        android:padding="20dp"
        android:text="Pura Batukaru"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="Lokasi: Penebel, Kabupaten Tabanan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="338dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Pura Luhur Batukaru adalah pura yang terletak di kaki Gunung Batukaru, puncak tertinggi kedua di Bali. Tersembunyi di tengah hutan pegunungan, pura ini menawarkan pengalaman spiritual yang tenang dan suasana alam yang indah.
\nHarga Tiket : Rp7.500 / orang"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hubungi: 087866771948"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="290dp"
            app:backgroundTint="#4CAF50" />
    </RelativeLayout>


</LinearLayout>

